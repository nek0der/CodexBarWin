<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CodexBarWin.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CodexBarWin.Views"
    xmlns:models="using:CodexBarWin.Models"
    xmlns:controls="using:CodexBarWin.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid Padding="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>      <!-- Provider list -->
            <RowDefinition Height="Auto"/>  <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Provider list -->
        <ScrollViewer Grid.Row="0" Padding="14,14,14,4">
            <ItemsControl x:Name="ProvidersItemsControl" ItemsSource="{x:Bind ViewModel.Providers, Mode=OneWay}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Spacing="8"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="models:UsageData">
                        <controls:ProviderCard Data="{x:Bind Mode=OneWay}" Loaded="OnProviderCardLoaded"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Error message -->
        <Grid
            Grid.Row="0"
            x:Name="ErrorPanel"
            Visibility="Collapsed"
            Padding="16">
            <StackPanel
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Spacing="8">
                <FontIcon
                    FontFamily="Segoe Fluent Icons"
                    Glyph="&#xE7BA;"
                    FontSize="28"
                    Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
                <TextBlock
                    x:Name="ErrorMessageText"
                    HorizontalAlignment="Center"
                    TextWrapping="Wrap"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    TextAlignment="Center"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                <HyperlinkButton
                    Content="Retry"
                    HorizontalAlignment="Center"
                    Click="OnRefreshClicked"/>
            </StackPanel>
        </Grid>

        <!-- Footer - Actions and status -->
        <Border
            Grid.Row="1"
            Background="{ThemeResource LayerFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="0,1,0,0">
            <Grid Padding="14,10,14,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Last updated text -->
                <TextBlock
                    Grid.Column="0"
                    x:Name="LastUpdatedText"
                    Text="Never updated"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                    VerticalAlignment="Center"/>

                <!-- Refresh button -->
                <Button
                    Grid.Column="1"
                    x:Name="RefreshButton"
                    ToolTipService.ToolTip="Refresh"
                    Click="OnRefreshClicked"
                    Padding="8"
                    Margin="0,0,4,0"
                    Background="Transparent"
                    BorderBrush="Transparent">
                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE72C;" FontSize="14"/>
                </Button>

                <!-- Settings button -->
                <Button
                    Grid.Column="2"
                    x:Name="SettingsButton"
                    ToolTipService.ToolTip="Settings"
                    Click="OnSettingsClicked"
                    Padding="8"
                    Background="Transparent"
                    BorderBrush="Transparent">
                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE713;" FontSize="14"/>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Page>
