<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CodexBarWin.Views.SetupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CodexBarWin.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,24">
            <TextBlock
                x:Name="HeaderIcon"
                Text="&#x26A0;"
                FontSize="48"
                HorizontalAlignment="Center"/>
            <TextBlock
                x:Name="HeaderText"
                Text="Setup Required"
                Style="{StaticResource TitleTextBlockStyle}"
                HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Content -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="16">

                <!-- Status card -->
                <Grid
                    Padding="16"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8">
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock x:Name="WslStatusIcon" Text="&#x274C;"/>
                            <TextBlock x:Name="WslStatusText" Text="Checking WSL..."/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock x:Name="CodexBarStatusIcon" Text="&#x274C;"/>
                            <TextBlock x:Name="CodexBarStatusText" Text="Checking codexbar..."/>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- Instructions -->
                <TextBlock
                    x:Name="InstructionText"
                    TextWrapping="Wrap"
                    Margin="0,8,0,0"/>

                <!-- Commands -->
                <ItemsControl x:Name="CommandsItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid
                                Margin="0,0,0,8"
                                Padding="12"
                                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                CornerRadius="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    Text="{Binding Command}"
                                    FontFamily="Cascadia Code,Consolas,monospace"
                                    IsTextSelectionEnabled="True"
                                    TextWrapping="Wrap"
                                    VerticalAlignment="Center"/>
                                <Button
                                    Grid.Column="1"
                                    Command="{Binding CopyCommand}"
                                    ToolTipService.ToolTip="Copy to clipboard"
                                    Padding="8"
                                    Margin="8,0,0,0">
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8C8;" FontSize="14"/>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <StackPanel
            Grid.Row="2"
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            Spacing="8"
            Margin="0,16,0,0">
            <HyperlinkButton
                x:Name="OpenGuideButton"
                Click="OnOpenGuideClicked">
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8A7;" FontSize="14"/>
                    <TextBlock Text="Documentation"/>
                </StackPanel>
            </HyperlinkButton>
            <Button
                x:Name="RecheckButton"
                Click="OnRecheckClicked">
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE72C;" FontSize="14"/>
                    <TextBlock Text="Recheck"/>
                </StackPanel>
            </Button>
            <Button
                x:Name="StartButton"
                Style="{StaticResource AccentButtonStyle}"
                Click="OnStartClicked"
                Visibility="Collapsed">
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE768;" FontSize="14"/>
                    <TextBlock Text="Start"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Loading overlay -->
        <Grid
            x:Name="LoadingOverlay"
            Grid.RowSpan="3"
            Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
            Visibility="Collapsed">
            <StackPanel
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Spacing="16">
                <ProgressRing IsActive="True" Width="48" Height="48"/>
                <TextBlock Text="Checking setup status..." HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
